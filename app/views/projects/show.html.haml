%p#notice= notice



.project-card
  .project-header
    .title
      %h1
        = @project.name
      -# %p
      -#   %b Status:
      -#   = @project.status
    .manage-btn
      = link_to(image_tag 'edit'), edit_project_path(@project)
      \|
      = link_to(image_tag 'delete'), projects_path
  .project-tasks
    = render @project.tasks
  .add-new-task
    = render 'tasks/form'
    

